# Application Settings
APP_NAME="Fastpy"
APP_VERSION="0.1.0"
# Options: development, staging, production
ENVIRONMENT=development
# Set to False in production
DEBUG=True

# Database Configuration
# Choose driver: postgresql, mysql, or sqlite
DB_DRIVER=postgresql

# PostgreSQL example:
DATABASE_URL=postgresql://postgres:password@localhost:5432/fastpy_db

# MySQL example (uncomment if using MySQL):
# DATABASE_URL=mysql://root:password@localhost:3306/fastpy_db

# Security
# IMPORTANT: Generate a secure key for production!
# Run: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
# Use comma-separated origins for production (not "*")
# Example: http://localhost:3000,https://example.com
CORS_ORIGINS=*
# Only set to True with specific origins (not "*")
CORS_ALLOW_CREDENTIALS=False

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
# Window in seconds
RATE_LIMIT_WINDOW=60
# Trusted proxy IPs for X-Forwarded-For header (comma-separated)
# Only requests from these IPs will trust the X-Forwarded-For header
# Leave empty to use direct client IP only (safer default)
TRUSTED_PROXIES=

# Logging
LOG_LEVEL=INFO
# Options: json or text
LOG_FORMAT=json

# Email Configuration (optional)
MAIL_ENABLED=False
# MAIL_SERVER=smtp.example.com
# MAIL_PORT=587
# MAIL_USERNAME=your-username
# MAIL_PASSWORD=your-password
# MAIL_FROM=noreply@example.com
# MAIL_FROM_NAME=Fastpy
# MAIL_TLS=True
# MAIL_SSL=False

# Redis Configuration (optional)
CACHE_ENABLED=False
# REDIS_URL=redis://localhost:6379/0

# AI Providers (optional - add your API keys)
# Default provider: openai, anthropic, google, groq, ollama
# AI_PROVIDER=openai

# OpenAI - https://platform.openai.com/api-keys
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o

# Anthropic - https://console.anthropic.com/settings/keys
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Google AI - https://aistudio.google.com/apikey
# GOOGLE_API_KEY=...
# GOOGLE_MODEL=gemini-2.0-flash

# Groq - https://console.groq.com/keys
# GROQ_API_KEY=gsk_...
# GROQ_MODEL=llama-3.3-70b-versatile

# Ollama - https://ollama.ai (local, no API key required)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2
